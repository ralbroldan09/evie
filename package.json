{
  "name": "Evie",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "android": "react-native run-android",
    "android:debug": "react-native run-android --variant=debug",
    "android:release": "react-native run-android --variant=release",
    "android:device": "react-native run-android --device",
    "android:emulator": "react-native run-android --emulator",
    "android:bundle": "cd android && ./gradlew bundleRelease",
    "android:apk": "cd android && ./gradlew assembleRelease",
    "android:clean": "cd android && ./gradlew clean",
    "ios": "react-native run-ios",
    "ios:device": "react-native run-ios --device",
    "ios:simulator": "react-native run-ios --simulator=\"iPhone 15\"",
    "ios:release": "react-native run-ios --configuration Release",
    "ios:archive": "cd ios && xcodebuild -workspace Evie.xcworkspace -scheme Evie -configuration Release archive -archivePath build/Evie.xcarchive",
    "ios:clean": "cd ios && xcodebuild clean -workspace Evie.xcworkspace -scheme Evie",
    "ios:pods": "cd ios && pod install",
    "ios:pods:update": "cd ios && pod update",
    "clean": "npm run clean:metro && npm run clean:watchman && npm run clean:node",
    "clean:metro": "npx react-native start --reset-cache",
    "clean:watchman": "watchman watch-del-all",
    "clean:node": "rm -rf node_modules && npm install",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && xcodebuild clean -workspace Evie.xcworkspace -scheme Evie && rm -rf build",
    "clean:all": "npm run clean && npm run clean:android && npm run clean:ios",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:cache": "eslint . --ext .js,.jsx,.ts,.tsx --cache",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "typecheck:strict": "tsc --noEmit --strict",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:update": "jest --updateSnapshot",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:voice": "jest --testPathPattern=voice",
    "test:integration": "jest --testPathPattern=e2e",
    "accessibility:audit": "echo 'Running accessibility audit...' && npm run test:a11y",
    "accessibility:report": "jest --coverage --testPathPattern=accessibility --coverageReporters=html",
    "accessibility:check": "npm run typecheck && npm run test:a11y && npm run lint",
    "voice:test": "npm run test:voice",
    "voice:debug": "jest --testPathPattern=voice --runInBand --detectOpenHandles",
    "dev": "npm run start",
    "dev:android": "npm run android:debug",
    "dev:ios": "npm run ios",
    "dev:clean": "npm run clean:all && npm run dev",
    "build": "npm run typecheck && npm run lint && npm run test:ci",
    "build:android": "npm run build && npm run android:bundle",
    "build:ios": "npm run build && npm run ios:archive",
    "build:release": "npm run build && npm run android:bundle && npm run ios:archive",
    "precommit": "npm run typecheck && npm run lint:cache && npm run test:ci",
    "prepare": "npm run build",
    "doctor": "npx react-native doctor",
    "info": "npx react-native info",
    "upgrade": "npx react-native upgrade",
    "postinstall": "cd ios && pod install --repo-update",
    "bundle:android": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "bundle:ios": "npx react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle",
    "performance:android": "adb shell am start -W -n com.evie/.MainActivity",
    "performance:ios": "instruments -t \"Time Profiler\" -D performance.trace",
    "debugger": "open \"rndebugger://set-debugger-loc?host=localhost&port=8081\"",
    "flipper": "open /Applications/Flipper.app"
  },
  "dependencies": {
    "@picovoice/porcupine-react-native": "^3.0.3",
    "@react-native-firebase/app": "^22.2.0",
    "@react-native-firebase/functions": "^22.2.0",
    "@react-navigation/native": "^7.1.10",
    "react": "19.0.0",
    "react-native": "0.79.3",
    "react-native-send-sms": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.3",
    "@react-native/eslint-config": "0.79.3",
    "@react-native/metro-config": "0.79.3",
    "@react-native/typescript-config": "0.79.3",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
